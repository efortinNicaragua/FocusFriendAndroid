<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_doctor_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/MM_TotalPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Points"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/totalPoints"
        android:onClick="refresh"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:background="@drawable/circle_txtview"
        android:text="2000"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="55sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="62dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/MM_TotalPoints"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/studySession"
        android:onClick="goto_StudySession"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Study Session"
        android:background="@drawable/circle_button"
        android:textColor="#F8F8FF"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginBottom="82dp"
        android:layout_above="@+id/rewards"
        android:layout_alignStart="@+id/rewards" />

    <Button
        android:id="@+id/leaderboard"
        android:onClick="goto_Leaderboard"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:background="@drawable/circle_button"
        android:textColor="#F8F8FF"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/studySession"
        android:layout_alignBottom="@+id/studySession"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/rewards"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:background="@drawable/circle_button"
        android:textColor="#F8F8FF"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/settings"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:background="@drawable/circle_button"
        android:textColor="#F8F8FF"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="342dp"
        android:layout_alignBaseline="@+id/rewards"
        android:layout_alignBottom="@+id/rewards"
        android:layout_alignStart="@+id/leaderboard" />


</RelativeLayout>
