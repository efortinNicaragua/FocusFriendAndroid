<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/updategroups_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n Please enter your College, Major and Groups"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/updategroups_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your University"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/updategroups_title"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/updategroups_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your major"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/updategroups_university"
        android:layout_alignStart="@+id/updategroups_university"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/updategroups_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a group"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/updategroups_major"
        android:layout_alignStart="@+id/updategroups_major" />

    <TextView
        android:id="@+id/updategroups_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a group"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginTop="75dp"
        android:layout_alignStart="@+id/updategroups_group1"
        android:layout_below="@id/updategroups_group1"/>
    <TextView
        android:id="@+id/updategroups_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a group"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginTop="75dp"
        android:layout_alignStart="@+id/updategroups_group2"
        android:layout_below="@id/updategroups_group2"/>

    <EditText
        android:id="@+id/edit_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="University"
        android:layout_below="@+id/updategroups_university"
        android:layout_alignStart="@+id/updategroups_university"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edit_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Major"
        android:layout_below="@+id/updategroups_major"
        android:layout_alignStart="@+id/updategroups_major"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edit_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Group1"
        android:layout_below="@+id/updategroups_group1"
        android:layout_alignStart="@+id/updategroups_group1"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edit_group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Group2"
        android:layout_below="@+id/updategroups_group2"
        android:layout_alignStart="@+id/updategroups_group2"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit_group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Group3"
        android:layout_below="@+id/updategroups_group3"
        android:layout_alignStart="@+id/updategroups_group3"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/dialog_update_groups"
        android:onClick="onClick"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="Create new user"
        android:textSize="15sp"
        android:background="@drawable/circle_button"
        android:textColor="#F8F8FF"
        android:layout_below="@+id/updategroups_group3"
        android:layout_alignParentEnd="true" />



</RelativeLayout>